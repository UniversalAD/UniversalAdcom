
@{
    ViewBag.Title = "Products";
}

<section class="video products-page relative container-fluid">
    <video autoplay loop src="@Url.Content("/Content/Video/about-products-video.mp4")" typeof="video/mp4"></video>
    <div class="row">
        <div class="col-sm-12 col-lg-8 center-block products">
            <div class="col-sm-8 col-md-7 col-lg-7 border-right">
                <h2 class="text-left">
                    It's Not Our Products<br />
                    That Make Us Different...
                </h2>
            </div>
            <div class="col-sm-4 col-md-5 col-lg-5 padding-left">
                <h3>It's How We Use Them.</h3>
                @Html.ActionLink("Request More Info", null, null, new { @class = "text-center" })
            </div>
        </div>
    </div>
</section>

<section class="different-products m-top-25 m-bottom-25">
    <div class="row row-max">
        <div class="col-xs-11 col-lg-11 center-block">
            <h2>Popular Products</h2>
            <div class="row">
                <div class="col-sm-6 col-md-6 col-lg-6 no-gutters">
                    <div class="hover-box" data-target="#magnets">
                        <img src="@Url.Content("/Content/Images/Products/Magnets.png")" class="img-responsive" />
                        <div class="hover-content" id="magnets">
                            <h4 class="text-center">Magnets</h4>
                            <p class="text-center">Make an impression that sticks and directs customers to your brand on a daily basis!</p>
                            <a href="#" class="btn btn-default red">View More</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-6 col-lg-6 no-gutters">
                    <div class="hover-box" data-target="#maps">
                        <img src="@Url.Content("/Content/Images/Products/Maps.png")" class="img-responsive" />
                        <div class="hover-content" id="maps">
                            <h4 class="text-center">Maps</h4>
                            <p class="text-center">Our county maps feature high detailed prints with all of your cities details highlighted.</p>
                            <a href="#" class="btn btn-default red">View More</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-md-6 col-lg-6 no-gutters">
                    <div class="hover-box" data-target="#bags">
                        <img src="@Url.Content("/Content/Images/Products/Totes.png")" class="img-responsive" />
                        <div class="hover-content" id="bags">
                            <h4 class="text-center">Bags</h4>
                            <p class="text-center">Carry your referral business to the next level with these awesome eco-friendly totes. </p>
                            <a href="#" class="btn btn-default red">View More</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-6 col-lg-6 no-gutters">
                    <div class="hover-box" data-target="#drinkware">
                        <img src="@Url.Content("/Content/Images/Products/Cups.png")" class="img-responsive" />
                        <div class="hover-content" id="drinkware">
                            <h4 class="text-center">Cups</h4>
                            <p class="text-center">Keep your brand cool and hydrate your business with these awesome products.</p>
                            <a href="#" class="btn btn-default red">View More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="promotional-ad">
    <div class="row row-max">
        <div class="col-xs-12 col-lg-11 center-block">
            <img src="@Url.Content("http://via.placeholder.com/2100x125")" class="img-responsive" />
            <div class="row relative m-top-25">
                <img src="@Url.Content("http://via.placeholder.com/2100x600")" class="img-responsive" />
                <button type="button" class="btn btn-default">Button</button>
            </div>
        </div>
    </div>
</section>

<section class="prodDesc m-top-50" ng-app="prodDesc">
    <div class="row row-max" ng-controller="prodDescController">
        <div class="col-lg-11 center-block">
            <div class="product-slick">
                <div data-target="#productDesc" data-toggle="modal" ng-click="magnets()"><img src="@Url.Content("http://via.placeholder.com/300x300")" class="img-responsive" /></div>
                <div data-target="#productDesc" data-toggle="modal" ng-click="totes()"><img src="@Url.Content("http://via.placeholder.com/300x300")" class="img-responsive" /></div>
                <div data-target="#productDesc" data-toggle="modal" ng-click="cups()"><img src="@Url.Content("http://via.placeholder.com/300x300")" class="img-responsive" /></div>
                <div data-target="#productDesc" data-toggle="modal" ng-click="shirts()"><img src="@Url.Content("http://via.placeholder.com/300x300")" class="img-responsive" /></div>
                <div data-target="#productDesc" data-toggle="modal" ng-click="koosie()"><img src="@Url.Content("http://via.placeholder.com/300x300")" class="img-responsive" /></div>
                <div data-target="#productDesc" data-toggle="modal" ng-click="backpacks()"><img src="@Url.Content("http://via.placeholder.com/300x300")" class="img-responsive" /></div>
            </div>
        </div>
        @Html.Partial("_ProductDescPartial")
    </div>
</section>



@section Scripts {
    @Scripts.Render("~/Scripts/ProductHover.js")
    @Scripts.Render("~/Controllers/ProductController.js")

    <script>
        $('.product-slick').slick({
            dots: false,
            infinite: true,
            speed: 300,
            slidesToShow: 4,
            slidesToScroll: 1,
            responsive: [
                {
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 3,
                        slidesToScroll: 3,
                        infinite: true,
                        dots: true
                    }
                },
                {
                    breakpoint: 600,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 2
                    }
                },
                {
                    breakpoint: 480,
                    settings: {
                        slidesToShow: 1,
                        slidesToScroll: 1
                    }
                }
            ]
        });
    </script>

    <script>
        $(".thumb").click(function () {

        });
    </script>
}
