
@{
    ViewBag.Title = "Pizza";
}

<section class="slices">
    <div class="row">
        <div class="col-lg-6 center-block">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 border-right">
                <h3 class="head-3">More than get you in the home</h3>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <h2 class="head-2">
                    WE KEEP YOU IN THE HOME.
                </h2>
            </div>
            <div class="col-xs-8 col-sm-6 col-md-5 col-lg-5 center-block">
                <img src="@Url.Content("/Content/Images/Pizza/pizza-slice-dog-costume-8876.jpg")" class="img-responsive dog" />
                @Html.ActionLink("Learn More Now", "Products", "Home", new { @class = "btn btn-default red center-block" })
            </div>
        </div>
    </div>
</section>

<section class="catch m-top-50">
    <div class="row">
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5 catch-block">
            <h3 class="text-center center-block">CATCH<br /> a ride</h3>
            <p class="text-center">
                Hop on board with one of our many pizza delivering experts and get your brand delivered into the hands, homes and hearts of the most loyal consumers in town;
                Pizza Enthusiasts!
            </p>
            <a href=""  id="requestinfo"  data-toggle="modal" data-target="#campaign" class="btn btn-default black">Locate Pizzerias Near You</a>
        </div>
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-7 img-block-parallax">
        </div>
    </div>
</section>

<section class="catch">
    <div class="row">
        <div class="col-xs-12 col-sm-5 col-sm-push-7 col-md-push-7 col-md-5 col-md-push-7 col-lg-5 col-lg-push-7 catch-block">
            <h3 class="text-center center-block">DELIVER<br /> value</h3>
            <p class="text-center">
                Through our partnerships with pizza parlors across the country, your brand will be delivered into the homes of consumers in your immediate area. The magnets are passed out with every pizza that is order by one of our distributor's customers.
            </p>
            <a href="" id="requestinfo" data-toggle="modal" data-target="#campaign" class="btn btn-default black">Get Started Now</a>
        </div>
        <div class="col-xs-12 col-sm-7 col-sm-pull-5 col-md-7 col-md-pull-5 col-lg-7 col-lg-pull-5 img-block-parallax funny-guy">
        </div>
    </div>
</section>

<section class="connected m-top-50" id="partner">
    <div class="row">
        <div class="col-lg-7 center-block">
            <h4 class="text-center">OUR MAGNETS ARE YOUR TICKET TO THE SHOW!</h4>
            <p class="text-center">The American Family Home is currently the most sought after marketing arena in the country and local businesses everywhere are trying their hardest to get their brand inside and seen for years... We make that happen every day for our clients.</p>
            <div class="content-wrapper col-xs-12 col-sm-7 col-md-6 col-md-push-1 col-lg-8 col-lg-push-2 center-block">
                <a href="" data-target="#freeartworkmodal" data-toggle="modal" class="center-block text-center">Get Connected Now!</a>
                <img src="@Url.Content("/Content/Images/Pizza/kitty.png")" class="img-responsive" />
            </div>            
        </div>
    </div>
</section>

<section class="pizza-magnet m-top-50">
    <img src="@Url.Content("/Content/Images/Pizza/Pizza-Page_Product.png")" class="img-responsive" />
</section>

@Html.Partial("_CampaignContactPartial")
@Html.Partial("_FreeArtworkModal")


@section Scripts{
    @Scripts.Render("~/scripts/pizza.js")

    <script>
        $("#campaigncontact").validate();
    </script>
}
