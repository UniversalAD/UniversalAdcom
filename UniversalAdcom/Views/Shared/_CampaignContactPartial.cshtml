@model UniversalAdcom.Models.CampaignContact

<div class="modal fade campaign" id="campaign" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <section>
                <div class="row">
                    @using (Html.BeginForm("AboutContact", "Home", FormMethod.Post, new { id = "campaigncontact" }))
                    {
                        @Html.AntiForgeryToken();
                        <div class="col-lg-12 center-block">
                            <div class="form-horizontal">
                                <h4 class="text-center modalHeading">Congratulations!</h4>
                                <p class="first">You made a great decision and we'd be happy to send you some more information regarding our campaigns.</p>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(m => m.FirstName, new { @class = "form-label" })
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", required = "required" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(m => m.LastName, new { @class = "form-label" })
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", required = "required" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(m => m.CountryPrefix, new { @class = "form-label" })
                                        @Html.DropDownListFor(m => m.CountryPrefix, UniversalAdcom.Models.Extensions.GetPrefixList(), new { @class = "form-control", required = "required", Value="0" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(m => m.Phone, new { @class = "form-label" })
                                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control phone", required = "required", type = "phone", id = "PhoneCampaign" })
                                        <p id="campaignPhoneStatus"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required", type = "email" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        @Html.CheckBoxFor(m => m.Hidden, new { type="hidden", value = "True", id="hidden" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-2">
                                        <input type="submit" class="btn btn-default red submit" id="submit" value="Send" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </div>
    </div>
</div>