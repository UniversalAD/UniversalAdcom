@model UniversalAdcom.Models.FreeArtworkContact

<div class="modal fade freeartwork" id="freeartworkmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">            
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="col-lg-10 center-block">
                    <h5 class="modal-title text-center">Get your Free <span>Ad</span> Now!</h5>
                    <p class="text-center col-lg-8 center-block">
                        We'll send you the mock up then you tell us if there's anything you'd like to change on the design; <br />
                        It's really that easy.
                    </p>
                </div>               
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("FreeArtworkContact", "Home", FormMethod.Post,  new { @id = "emailContact" }))
                {
                    @Html.AntiForgeryToken();

                    <div class="row">
                        <div class="col-lg-10 center-block">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                                        @Html.TextBoxFor(m => m.Name, new { @class="form-control", required="required"})
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(m => m.Email, new { @class="form-label"})
                                        @Html.TextBoxFor(m => m.Email, new { @class="form-control", required="required"})
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(m => m.Phone, new { @class="form-label"})
                                        @Html.TextBoxFor(m => m.Phone, new { @class="form-control", required="required"})
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(m => m.BusinessName, new { @class="form-label"})
                                        @Html.TextBoxFor(m => m.BusinessName, new { @class="form-control", required="required"})
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(m => m.Position, new { @class="form-label"})
                                        @Html.TextBoxFor(m => m.Position, new { @class="form-control", required="required"})
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(m => m.Website, new { @class="form-label"})
                                        @Html.TextAreaFor(m => m.Website, new { @class="form-control"})
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-4">
                                        <input type="submit" class="btn btn-default red" id="submit" value="Send" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>          
        </div>
    </div>
</div>