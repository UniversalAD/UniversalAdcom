@model UniversalAdcom.Models.PostViewModel
@{
    ViewBag.Title = "Add Video";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("AddVideoToPost", "Blog", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <section>
        <div class="row">
            <div class="col-md-4 col-md-offset-2">
                <h2>Add Video To Post</h2>
                <div class="addVidCont">
                    <input type="hidden" name="slug" value="@Model.UrlSeo" />
                    <input type="hidden" name="postid" value="@Model.ID" />
                    <input class="addVidToPost" type="url" name="videoUrl" />
                    <input class="addVidBtn" type="submit" value="&#x27a5;" />
                </div>
            </div>
        </div>
    </section>
}
