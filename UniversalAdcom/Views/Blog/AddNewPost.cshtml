@model UniversalAdcom.Models.PostViewModel
@{
    ViewBag.Title = "Add New Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("AddNewPost", "Blog", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <section style="margin-top: 75px">
        <div class="row">
            <div class="form-horizontal col-md-6 col-md-offset-2">
                <h2>Create New Post</h2>
                       <div class="form-group">
                           <div class="col-sm-2 col-md-2 control-label">
                               Id :
                           </div>
                           <div class="col-sm-10 col-md-10">
                               @Html.TextBoxFor(m => m.ID, new { @class = "editPostIdInp form-control", @readonly = "readonly" })
                           </div>
                       </div>
                <div class="form-group">
                    <div class="col-sm-2 col-md-2 control-label">
                        Title :
                    </div>
                    <div class="col-sm-10 col-md-10">
                        @Html.TextBoxFor(m => m.Title, new { @class = "editPostTitleInp form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2 col-md-2 control-label">
                        Meta :
                    </div>
                    <div class="col-sm-10 col-md-10">
                        @Html.TextBoxFor(m => m.Meta, new { @class = "editPostMeta form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2 col-md-2 control-label">
                        UrlSeo :
                    </div>
                    <div class="col-sm-10 col-md-10">
                        @Html.TextBoxFor(m => m.UrlSeo, new { @class = "editPostSeo form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2 col-md-2 control-label">
                        ShortDescription :
                    </div>
                    <div class="col-sm-10 col-md-10">
                        @Html.TextAreaFor(m => m.ShortDescription, new { @id = "editor1", Value = Model.ShortDescription, @class="form-control" })
                        <script>
                            CKEDITOR.replace('editor1');
                        </script>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2 col-sm-2 control-label">
                        Body :
                    </div>
                    <div class="col-sm-10 col-md-10">
                        @Html.TextAreaFor(m => m.Body, new { @id = "editor2", Value = Model.Body, @class="form-control" })
                        <script>
                            CKEDITOR.replace('editor2');
                        </script>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2 col-md-push-2">
                        <input class="comTextBtn" type="submit" value="&#x27a5;" />
                    </div>
                </div>              
            </div>
        </div>
    </section>
}
